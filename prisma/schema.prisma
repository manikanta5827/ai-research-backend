generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String     @id @default(uuid())
  user        String
  topic       String
  status      TaskStatus
  createdAt   DateTime   @default(now())
  completedAt DateTime?
  error       String?

  logs    Log[]
  results TaskResult[]
}

model Log {
  id        Int      @id @default(autoincrement())
  taskId    String
  step      String
  message   String
  meta      Json?
  createdAt DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id])
}

model TaskResult {
  id        String   @id @default(uuid())
  taskId    String
  result    Json
  createdAt DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id])
}

enum TaskStatus {
  pending
  running
  succeeded
  failed
}
