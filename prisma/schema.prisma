
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  email         String    @unique
  password      String
  profilePic    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  tasks     Task[]
}

model Task {
  id          Int       @id @default(autoincrement())
  userId      Int
  topic       String
  status      TaskStatus
  createdAt   DateTime     @default(now())
  completedAt DateTime?
  error       String?

  user        User?        @relation(fields: [userId], references: [id])
  logs        Log[]
  results     TaskResult[]
}

model Log {
  id        Int      @id @default(autoincrement())
  taskId    Int
  step      String
  message   String
  meta      Json?
  createdAt DateTime @default(now())

  task      Task     @relation(fields: [taskId], references: [id])
}

model TaskResult {
  id        Int   @id @default(autoincrement())
  taskId    Int
  result    Json
  createdAt DateTime @default(now())

  task      Task     @relation(fields: [taskId], references: [id])
}

enum TaskStatus {
  pending
  running
  succeeded
  failed
}
